.diag3
  margin-top 10px
  min-height 60vh
  display flex
  flex-flow column
  justify-content space-between
  align-items center

  div
    background #fffc
    min-height 20vh
    box-shadow 0 0 2px 2px #4499
    padding 10px
    font-size 1.3em
    font-style italic
    display flex
    flex-wrap wrap
    justify-content space-between
    align-items center
    border-radius 7px

  button
    background-color darkblue
    color white
    box-shadow 0 0 2px 2px #4499
    line-height 2em
    border-radius 4px
    border white solid 2px

    &:hover
      background-color #707

@media (max-width 499px)
  .diag3
    div
      flex-grow 1
      margin 10px
      min-width 70vw

@media (min-width 500px)
  .diag3
    display grid
    grid-template-rows 1fr 1fr 1fr
    grid-gap 10px
    grid-template-columns 1fr 1fr 1fr

    & > div:nth-child(1)
      grid-area 1 / 1

    & > div:nth-child(2)
      grid-area 2 / 2

    & > div:nth-child(3)
      grid-area 3 / 3
